<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="#000000"
        android:backgroundTint="@color/black"
        android:paddingTop="18dp"
        android:text="Σύνδεση"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="145dp"
        android:text="UserID"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/username_txt"
        android:includeFontPadding="true"
        android:paddingTop="25dp"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="145dp"
        android:backgroundTint="#50a235"
        />

    <Button
        android:id="@+id/user_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="148dp"
        android:foreground="@drawable/ic_info"
        />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="237dp"
        android:text="Κωδικός"
        android:textColor="#ffffff"
        android:textSize="18sp" />


    <Button
        android:id="@+id/password_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="240dp"
        android:foreground="@drawable/ic_info" />


    <EditText
        android:id="@+id/password_txt"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:inputType="textPassword"
        android:password="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="237dp"
        android:backgroundTint="#50a235"
        android:includeFontPadding="true"
        android:paddingTop="25dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/connect"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="571dp"
        android:layout_marginBottom="47dp"
        android:foreground="@drawable/ic_btn_rounded"
        android:text="Σύνδεση"
        android:textAllCaps="false"
        android:textColor="#85c370"
        android:textSize="17sp"
        app:backgroundTint="@android:color/transparent" />


    <Button
        android:id="@+id/viewPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="43dp"
        android:text="Προβολή"
        android:textAllCaps="false"
        android:textColor="#2c9f1d"
        android:textSize="13sp"
        style="@style/Widget.AppCompat.Button.Borderless" />


</RelativeLayout>


